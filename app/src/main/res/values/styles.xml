<resources>
    <!-- 기존 테마가 있다면 아래 스타일만 추가 -->


    <resources xmlns:tools="http://schemas.android.com/tools">

        <!-- ✅ 앱 테마 설정 -->
        <style name="Theme.MyKeywordApp" parent="Theme.Material3.DayNight.NoActionBar">
            <!-- Primary theme colors -->
            <item name="colorPrimary">#2962FF</item> <!-- 진한 코발트 -->
            <item name="colorPrimaryVariant">#0039CB</item>
            <item name="colorOnPrimary">#FFFFFF</item>

            <!-- Background and surface -->
            <item name="android:windowBackground">#FAFAFA</item>
            <item name="colorSurface">#FFFFFF</item>
            <item name="colorOnSurface">#212121</item>

            <!-- 기본 폰트 색상 -->
            <item name="android:textColor">#212121</item>

            <!-- 버튼 스타일 전체 적용 -->
            <item name="buttonStyle">@style/MyButton</item>

            <!-- 텍스트뷰 스타일 적용 가능 -->
            <item name="textViewStyle">@style/MyTextView</item>

            <!-- EditText 스타일 -->
            <item name="editTextStyle">@style/MyEditText</item>
        </style>


    </resources>

    <resources xmlns:tools="http://schemas.android.com/tools">

        <!-- ✅ 앱 전체 테마 -->
        <style name="Theme.MyApp" parent="Theme.Material3.DayNight.NoActionBar">
            <!-- 주요 색상 -->
            <item name="colorPrimary">#001F54</item> <!-- 네이비 -->
            <item name="colorOnPrimary">#FFFFFF</item>
            <item name="colorSecondary">#800020</item> <!-- 버건디 -->
            <item name="colorSurface">#FFFFFF</item>
            <item name="colorOnSurface">#000000</item>

            <!-- 배경 -->
            <item name="android:windowBackground">#FAFAFA</item>

            <!-- 기본 스타일 적용 -->
            <item name="buttonStyle">@style/MyButton</item>
            <item name="editTextStyle">@style/MyEditText</item>
            <item name="textViewStyle">@style/MyTextView</item>
        </style>

        <!-- ✅ 버튼 스타일 -->
        <style name="MyButton" parent="Widget.Material3.Button">
            <item name="android:backgroundTint">#001F54</item>
            <item name="android:textColor">#FFFFFF</item>
            <item name="android:textStyle">bold</item>
            <item name="android:padding">12dp</item>
            <item name="android:minHeight">48dp</item>
        </style>

        <!-- ✅ EditText 스타일 -->
        <style name="MyEditText" parent="Widget.Material3.TextInputEditText.FilledBox">
            <item name="android:textColor">#000000</item>
            <item name="android:hintTextColor">#999999</item>
            <item name="android:padding">10dp</item>
            <item name="android:backgroundTint">#CCCCCC</item>
        </style>

        <!-- ✅ TextView 스타일 -->
        <style name="MyTextView" parent="Widget.Material3.TextView">
            <item name="android:textSize">16sp</item>
            <item name="android:textColor">#333333</item>
            <item name="android:lineSpacingExtra">4dp</item>
        </style>

    </resources>


</resources>
