<?xml version="1.0" encoding="utf-8"?>
<resources>


        <!-- 텍스트 스타일 -->
    <style name="HeaderText">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>


    <style name="OutputText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:gravity">center</item></style>


    <!-- 앱 전체 테마 정의 -->
    <style name="Theme.MyApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorOnSecondary">@android:color/black</item>
        <item name="colorOnBackground">@android:color/black</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- 기본 색상 및 속성 -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- ✅ 기존 둥근 버튼 스타일 -->
    <style name="RoundedButtonStyle">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- ✅ TextView 제목 스타일 (유지) -->
    <style name="TitleText">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <!-- ✅ 보조 텍스트 스타일 -->
    <style name="SecondaryText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textSecondary</item>
    </style>

    <!-- ✅ 기본 주요 버튼 스타일 -->
    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- ✅ 2x2 그리드용 버튼 스타일 -->
    <style name="GridActionButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">160dp</item>
        <item name="android:backgroundTint">@color/primaryLight</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:elevation">6dp</item>
    </style>

    <!-- ✅ 원형 버튼 (음성 등록) -->
    <style name="CircularButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/purple_500</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">100dp</item>
        <item name="android:elevation">6dp</item>
    </style>

    <!-- ✅ 작은 아이콘 버튼 (뒤로가기 등) -->
    <style name="SmallIconButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/grayLight</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- ✅ 링크 텍스트 -->
    <style name="LinkText">
        <item name="android:textColor">@color/linkBlue</item>
        <item name="android:textSize">14sp</item>
        <item name="android:autoLink">web</item>
    </style>

    <style name="CircleRedButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">30dp</item>
        <item name="android:minHeight">60dp</item>
        <item name="android:minWidth">60dp</item>
        <item name="backgroundTint">@color/red</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CircleGrayButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">30dp</item>
        <item name="android:minHeight">60dp</item>
        <item name="android:minWidth">60dp</item>
        <item name="backgroundTint">@color/gray</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CircleBlueButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">30dp</item>
        <item name="android:minHeight">60dp</item>
        <item name="android:minWidth">60dp</item>
        <item name="backgroundTint">@color/linkBlue</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
    </style>


</resources>
