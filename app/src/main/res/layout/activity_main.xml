<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- 1. 앱 이름 + 메뉴 버튼 -->

    <TextView
        android:id="@+id/appNameText"
        android:layout_width="195dp"
        android:layout_height="37dp"
        android:text="@string/gethelp"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/menuButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/menuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="☰"
        app:layout_constraintTop_toTopOf="@+id/appNameText"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 2. 사용자 정보 -->
    <TextView
        android:id="@+id/userInfoText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="사용자 이름: 홍길동\n전화번호: 010-1234-5678"
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/appNameText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- 3. 버튼 4개 (2x2) -->

    <!-- 4. 상태 텍스트 -->
    <Button
        android:id="@+id/button4"
        style="@style/RoundedButton"
        android:text="@string/history"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/button3"
        app:layout_constraintTop_toTopOf="@id/button3"
        app:layout_constraintWidth_percent="0.48" />

    <Button
        android:id="@+id/button3"
        style="@style/RoundedButton"
        android:layout_width="184dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:text="@string/on_off"
        app:layout_constraintEnd_toStartOf="@id/button4"
        app:layout_constraintStart_toStartOf="@id/button1"
        app:layout_constraintTop_toBottomOf="@id/button1"
        app:layout_constraintWidth_percent="0.48" />

    <Button
        android:id="@+id/button1"
        style="@style/RoundedButton"
        android:layout_marginTop="76dp"
        android:text="@string/key_word"
        app:layout_constraintEnd_toStartOf="@id/button2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userInfoText"
        app:layout_constraintWidth_percent="0.48" />

    <Button
        android:id="@+id/button2"
        style="@style/RoundedButton"
        android:text="@string/voice_reco"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/button1"
        app:layout_constraintTop_toTopOf="@id/button1"
        app:layout_constraintWidth_percent="0.48" />

    <!-- 5. 광고 배너 -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:gravity="center"
        android:paddingTop="8dp"
        android:text="상태: 준비됨"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button3" />

    <ImageView
        android:id="@+id/bannerAd"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/banner_sample"
        android:contentDescription="광고 배너"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toBottomOf="@id/statusText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.2"/>
</androidx.constraintlayout.widget.ConstraintLayout>
