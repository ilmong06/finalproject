<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/voice_register_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="10dp"
    android:background="@color/backgroundLight"
    android:fitsSystemWindows="true"
    android:layout_marginTop="10dp">

    <!-- 헤더 바 -->
    <LinearLayout
        android:id="@+id/headerBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <Button
            android:id="@+id/btnBack"
            style="@style/SmallIconButton"
            android:text="@string/back" />

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/appName"
            style="@style/TitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gethelp"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>

    <!-- 중앙 정렬 영역 -->
    <LinearLayout
        android:id="@+id/centerLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/headerBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 안내 문구 -->
        <TextView
            android:id="@+id/tvInstruction"
            style="@style/SecondaryText"
            android:text="사용자 음성 유사도 측정을 위해 4회 등록합니다."
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- 구분선 -->
        <View
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:background="@color/grayLight"
            android:layout_marginVertical="12dp" />

        <!-- 음성 등록 버튼 (원형) -->
        <Button
            android:id="@+id/btnRecord"
            style="@style/CircularButton"
            android:layout_width="200dp"
            android:layout_height="200dp"

            android:text="녹음 시작"
            android:textSize="16sp" />

        <!-- 구분선 -->
        <View
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:background="@color/grayLight"
            android:layout_marginVertical="12dp" />

        <!-- 마지막 등록 날짜 -->
        <TextView
            android:id="@+id/tvLastDate"
            style="@style/SecondaryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="마지막 등록 날짜 : " />

        <!-- 구분선 -->
        <View
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:background="@color/grayLight"
            android:layout_marginBottom="12dp" />

        <!-- 음성 삭제 버튼 -->
        <Button
            android:id="@+id/btnDelete"
            style="@style/PrimaryButton"
            android:layout_width="160dp"
            android:layout_height="48dp"
            android:text="음성 삭제"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/tvKeywordGuide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="불러온 키워드가 여기에 표시됩니다"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="14sp"/>
        <!-- 키워드 선택 드롭다운 -->
        <Spinner
            android:id="@+id/spinnerKeywords"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
