<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        <TextView
            android:id="@+id/adminTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/admin_mode"

            android:id="@+id/btnManageUsers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/admin_user"
            android:layout_marginBottom="16dp" />

            android:id="@+id/btnViewReports"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/search_record"
            android:layout_marginBottom="16dp" />

            android:id="@+id/btnManageContacts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/admin_phnum"
            android:layout_marginBottom="16dp" />

            android:id="@+id/btnCheckServer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/check_server_model"
            android:layout_marginBottom="16dp" />

            android:id="@+id/btnViewStatistics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/accuracy"
            android:layout_marginBottom="16dp" />

            android:id="@+id/btnAppSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_setting"
            android:layout_marginBottom="32dp" />
    </LinearLayout>
</ScrollView>
