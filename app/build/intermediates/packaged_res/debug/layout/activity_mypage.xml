<?xml version="1.0" encoding="utf-8"?>
<!-- 마이 페이지

1) 개인 정보 수정
2) 이름, 전화번호, 생년월일 8자리 수정

-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <Button
            android:id="@+id/mp_btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="←"
            android:textSize="14sp"
            android:backgroundTint="#DDDDDD"
            android:textColor="#000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- 네이비 제목 바 -->

        <!-- 사용자 정보 입력 -->

        <TextView
            android:id="@+id/mp_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:background="#001F54"
            android:padding="12dp"
            android:text="사용자 정보 수정"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/mp_btnBack" />

        <LinearLayout
            android:id="@+id/mp_layout_user_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/mp_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수정하고 싶은 정보를 입력하세요"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- 이름 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_name"
                android:textColor="#800020"
                android:layout_marginTop="12dp"/>

            <EditText
                android:id="@+id/mp_plain_text_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/input_user_name"
                android:inputType="text"
                android:minHeight="48dp" />

            <!-- 전화번호 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_phnum"
                android:textColor="#800020"
                android:layout_marginTop="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/mp_phone_text_input"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.65"
                    android:hint="@string/numbers"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:minHeight="48dp" />

            </LinearLayout>


        </LinearLayout>

        <!-- 긴급 연락처 입력 -->
        <LinearLayout
            android:id="@+id/mp_layout_emergency"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mp_layout_user_info">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/emergency"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/em_name"
                android:layout_marginTop="8dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/input_user_name"
                android:id="@+id/mp_et_emergency_name"
                android:inputType="text"
                android:minHeight="48dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/em_phnum"
                android:layout_marginTop="8dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/numbers"
                android:id="@+id/mp_et_emergency_phone"
                android:inputType="phone"
                android:minHeight="48dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/relation"
                android:layout_marginTop="8dp" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/rounded_spinner"
                android:id="@+id/mp_spinner_relation"
                android:entries="@array/relationship_list" />
        </LinearLayout>

        <!-- 완료 버튼 -->
        <Button
            android:id="@+id/mp_btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/complete"
            android:layout_marginTop="24dp"
            style="@style/PrimaryButton"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/mp_layout_emergency"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
